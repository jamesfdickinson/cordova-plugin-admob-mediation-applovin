<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android" id="cordova-plugin-admob-mediation-applovin-jd" version="1.0.0">

    <name>AdMob Mediation Adapter for  applovin </name>
    <description>AdMob Mediation Adapter for applovin</description>
    <author>Jimmy Dickinson</author>
    <keywords>admob,mediation,applovin</keywords>
    <license>MIT</license>

    <platform name="android">
        <preference name="GOOGLE_ADS_MEDIATION_APPLOVIN_VERSION_ANDOIRD" default="13.0.1.0" />
        <framework src="com.google.ads.mediation:applovin:$GOOGLE_ADS_MEDIATION_APPLOVIN_VERSION_ANDOIRD" />
    </platform>

    <platform name="ios">
      <preference name="GOOGLE_ADS_MEDIATION_APPLOVIN_VERSION_IOS" default="~> 13.0" />
        <podspec>
            <config>
                <source url="https://cdn.cocoapods.org/"/>
            </config>
            <pods>
                <pod name="AppLovinSDK" spec="$APPLOVIN_SDK_VERSION_IOS" />
                <pod name="GoogleMobileAdsMediationAppLovin" spec="$GOOGLE_ADS_MEDIATION_APPLOVIN_VERSION_IOS" />           
            </pods>
        </podspec>
    </platform>
</plugin>